<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>BCX Exam</title>

    <link rel="shortcut icon" type="image/x-icon" href="/favicon.png">


    @Styles.Render("~/Content/style.css")
    @Styles.Render("~/Content/admin.css")

    
</head>

<body>

    <nav id="topNavigation">
        <div class="container-fluid">
            <div class="row">
                <div class="col-4">
                    <img id="logo" src="/Content/logo.png" />
                </div>
                <div class="col-4">

                </div>
                <div id="adminColumn" class="col-4">
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
    </nav>


    <div class="container-fluid" style="height: calc(100% - 76px); padding-left: 0">
        <div class="row" style="height: 100%">
            <div class="col-2" id="leftNavigation">
                <a href="/Admin/Tests" class="btn btn-secondary navigationQuestion">Student Answers</a>
                <a href="/Admin/Questions" class="btn btn-secondary navigationQuestion">Questions</a>
                <a href="/" class="btn btn-secondary navigationQuestion">Preview</a>
            </div>

            <div class="col-10" id="mainContent">

                @RenderBody()

                
            </div>
        </div>
    </div>

</body>
</html>
